<div id="confirm-user-container" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Change indentity<small></small></h4>
      </div>
      <%= form_tag '/user/su', { method: :post, :class => "", :remote => true } do %>
        <div class="modal-body">
            <input class="hide current-target-id" name="su_user_id" value="" />
            Really change your identity to <strong class="destination-username"></strong>?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
          <button type="submit" class="btn btn-primary">Yes</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
