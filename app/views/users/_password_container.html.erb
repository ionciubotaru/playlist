<div id="passwd-container" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title"><i class="fa fa-key"></i>&nbsp;Schimbare parolă pentru <%= current_user.name if current_user %></h4>
      </div>
      <div class="modal-body">
        <div class="password-form-container">
            <%= form_tag '/users/password', { method: :post, :class => "login-form", id: "change-passwd" } do %>
              <input type="hidden" name="user_id" value="<%= current_user.id if current_user %>">
              <div class="form-group">
                <input name="passwd_new" type="password" class="form-control text-center" placeholder="Introduceţi parola nouă">
              </div>
              <div class="form-group">
                <input name="passwd_verify" type="password" class="form-control text-center" placeholder="Repetaţi parola nouă">
              </div>
              <button type="button" class="btn btn-lg btn-default" data-dismiss="modal">Renunţă</button>
              <button id="passwd_submit" class="btn btn-lg btn-primary" type="submit">Salvează</button>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
