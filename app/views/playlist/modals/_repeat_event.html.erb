<div id="repeat-event-container" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
    <%= form_tag('/event/saverepeat', remote: true, html: { method: :post, class: "" }) do %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Repeat <small><%= @media.name %></small></h4>
      </div>
      <div class="modal-body">
          <div id="repeat-event-form">
            <div class="panel-body">
              <div class="form-horizontal">
                <input id="event-id" type="hidden" name="event_id" value="<%= @event.id %>" />
                <div class="form-group">
                    <h4>Periodically</h4>
                    <label for="repeat-start" class="col-sm-2 control-label">From&nbsp;&nbsp;<i class="fa fa-calendar"></i></label>
                    <div class="col-sm-4">
                      <input data-date-format="YYYY-MM-DD" id="repeat-start" name="from" type='text' class="form-control" value="<%=@parent.from%>" />
                    </div>
                    <label for="repeat-end" class="col-sm-2 control-label">To&nbsp;&nbsp;<i class="fa fa-calendar"></i></label>
                    <div class="col-sm-4">
                      <input data-date-format="YYYY-MM-DD" id="repeat-end" name="to" type='text' class="form-control" value="<%=@parent.to%>"/>
                    </div>
                </div>
	        <div class="form-group">
                  <label class="col-sm-2 control-label">Days&nbsp;&nbsp;<i class="fa fa-map-pin"></i></label>
                  <div class="col-sm-10">
                      <label class="checkbox-inline"><input type="checkbox" name="d1" <%= @parent.d1 ? 'checked="checked"' : '' %> >&nbsp; Mo </label>
                      <label class="checkbox-inline"><input type="checkbox" name="d2" <%= @parent.d2 ? 'checked="checked"' : '' %> >&nbsp; Tu </label>
                      <label class="checkbox-inline"><input type="checkbox" name="d3" <%= @parent.d3 ? 'checked="checked"' : '' %> >&nbsp; We </label>
                      <label class="checkbox-inline"><input type="checkbox" name="d4" <%= @parent.d4 ? 'checked="checked"' : '' %> >&nbsp; Th </label>
                      <label class="checkbox-inline"><input type="checkbox" name="d5" <%= @parent.d5 ? 'checked="checked"' : '' %> >&nbsp; Fr </label>
                      <label class="checkbox-inline"><input type="checkbox" name="d6" <%= @parent.d6 ? 'checked="checked"' : '' %> >&nbsp; Sa </label>
                      <label class="checkbox-inline"><input type="checkbox" name="d0" <%= @parent.d0 ? 'checked="checked"' : '' %> >&nbsp; Su </label>
                  </div>
	        </div>
                <div class="form-group">
                    <h4>Daily</h4>
                    <label for="starttime" class="col-sm-2 control-label">Start&nbsp;&nbsp;<i class="fa fa-sign-in"></i></label>
                    <div class="col-sm-2">
                      <input type="text" class="form-control" name="start" placeholder="00:00" value="<%= @parent.tstart.to_s(:time) %>" >
                    </div>
                </div>
                <% if [1,2,5].include?(@parent.destmediatype) %>
                <div class="form-group">
                    <label for="startminutes" class="col-sm-2 control-label">Duration&nbsp;&nbsp;<i class="fa fa-clock-o"></i></label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="duration1" value="<%= @parent.duration1 %>" >
                    </div>
                    <label class="col-sm-1 control-label">hour</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="duration2" value="<%= @parent.duration2 %>" >
                    </div>
                    <label class="col-sm-1 control-label">min</label>
                </div>
                <% end %>
                <% if [3,4,5].include?(@parent.destmediatype) %>
                <div class="form-group">
                    <label for="repeattimes" class="col-sm-2 control-label">Repeat&nbsp;&nbsp;<i class="fa fa-repeat"></i></label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="repeat" value="<%= @parent.repeat %>" >
                    </div>
                    <label class="col-sm-1 control-label"> times</label>
                </div>
                <div class="form-group">
                    <label for="everyminutes" class="col-sm-2 control-label">Every&nbsp;&nbsp;<i class="fa fa-list"></i></label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="every" value="<%= @parent.every %>" >
                    </div>
                    <label class="col-sm-1 control-label">min</label>
                </div>
		<% end %>
                <div class="form-group">
            	    <% if [3,4].include?(@parent.destmediatype) %>
                    <label for="volume" class="col-sm-2 control-label">Volume&nbsp;&nbsp;<i class="fa fa-volume-up"></i></label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="volume" value="<%= @parent.volume %>" >
                    </div>
                    <label class="col-sm-1 control-label">%&nbsp;over</label>
		    <% end %>
            	    <% if not [5].include?(@parent.destmediatype) %>
                    <div class="col-sm-3 col-sm-offset-1">
                        <label class="checkbox">
                            <input type="checkbox" name="hdmi"  <%= @parent.hdmi ? 'checked="checked"' : '' %>> HDMI
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="audio" <%= @parent.audio ? 'checked="checked"' : '' %>> Audio
                        </label>
                    </div>
		    <% end %>
                </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag("Save", class: "btn btn-primary") %>
      </div>
    </div>
    <% end %>
  </div>
</div>
