<div id="new-text-container" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New text<small></small></h4>
      </div>
      <%= form_tag '/text/new', { method: :post, :class => "" } do %>
        <div class="modal-body new-text">
          <div class="panel-body form-horizontal">
              <div class="form-group">
                  <label for="new-text-label" class="col-sm-3 control-label">Label&nbsp;&nbsp;<i class="fa fa-tag"></i></label>
                  <div class="col-sm-9">
                    <input id="new-text-label" name="text_label" type='text' class="form-control" />
                  </div>
              </div> 
              <div class="form-group">
                  <label for="new-text" class="col-sm-3 control-label">Text&nbsp;&nbsp;<i class="fa fa-file-text-o"></i></label>
                  <div class="col-sm-9">
                      <textarea id="new-text" rows="4" name="text" class="form-control"></textarea>
                  </div>
              </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
