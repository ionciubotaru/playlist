<div id="video-playlist-content-container" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 id="video-plist-header" class="modal-title"></h4>
      </div>
        <div class="modal-body">
          <%= form_tag '/playlist/content', { method: :post, :class => "" } do %>
              <input class="hide" id="plist_id" name="plist_id" />
              <select id="vpc" multiple="multiple" name="list[]">
                <% @media.each do |m| %>
                  <% if m.mediatype == 2 %>
                      <option value="<%= m.id %>"><%= m.name %></option> 
                  <% end %>
                <% end %>
              </select>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        <% end %>
    </div>
  </div>
</div>
