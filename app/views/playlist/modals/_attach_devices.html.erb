<div id="attach-devices-container" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	    <h4 id="calendar-devices-header" class="modal-title"></h4>
	</div>
	<%= form_tag '/calendar/attach', { method: :post, :class => "" } do %>
          <div class="modal-body">
              <input class="hide cal-target-id" name="calendar_id" value="">
                <div class="pull-right">
                  <label class="radio-inline">
                    <input name="mass-devices" type="radio" id="attach-all"> Attach all
                  </label>
                  <label class="radio-inline">
                    <input name="mass-devices" type="radio" id="dettach-all"> Dettach all
                  </label>
                </div>
                <div class="clearfix"></div>
              <% @devices.each do |d| %>
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="device_id[]" value="<%= d.id %>" />
                      <%= d.name %><small>&nbsp;(<%= d.address %>)</small>
                    </label>
                  </div>
              <% end %>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Save</button>
          </div>
	<% end %>
    </div>
  </div>
</div>
