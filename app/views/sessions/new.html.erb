<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <h2 class="text-center">Playlist manager</h2>
            <div class="login-form-container">
                <%= form_tag '/login', { method: :post, :class => "login-form" } do %>
                  <div class="form-group">
                    <input name="email" type="text" class="form-control text-center" placeholder="<%=message(1)%>" required autofocus>
                  </div>
                  <div class="form-group">
                    <input name="password" type="password" class="form-control text-center" placeholder="<%=message(2)%>" required>
                  </div>
                  <button class="btn btn-lg btn-primary btn-block" type="submit"><%=message(3)%></button>
                <% end %>
            </div>
        </div>
    </div>
</div>
